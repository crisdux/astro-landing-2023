---
import mores from '../../config/more.json'

---

<section class="flex flex-col py-10 md:flex-row md:p-20 gap-y-10">
  <div class="flex-1 grid grid-cols-2 gap-4">
    {
      mores.map(({src, alt, content}) => (
        <div class="text-center">
          <img src={src} alt={alt} class="w-20 m-auto">
          <p class="mt-4">{content}</p>
        </div>
      ))
    }
  </div>

  <div class="flex flex-1 flex-col gap-y-10 text-center">
    <h2 class="text-5xl font-bold">Lorem ipsum dolor sit.</h2>
    <p class="text-3xl text-zinc-500">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Consequatur voluptas impedit accusantium culpa at rem.</p>
  </div>
</section>